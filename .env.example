# =================
# üöÄ ETF Portfolio Manager - Environment Configuration
# =================

# Application Configuration
NODE_ENV=development
PORT=3000
APP_NAME="ETF Portfolio Manager"
APP_URL=http://localhost:3000

# =================
# üîê Security Configuration
# =================

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-as-well

# =================
# üìä Database Configuration
# =================

# PostgreSQL Configuration (Production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=etf_manager
DB_USER=postgres
DB_PASSWORD=your-database-password

# Alternative: Database URL (for services like Heroku, Railway)
# DATABASE_URL=postgresql://username:password@hostname:port/database

# SQLite Configuration (Development/Fallback)
SQLITE_PATH=./data/portfolio.db

# =================
# üìß Email Configuration (Optional)
# =================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Email Settings
FROM_EMAIL=noreply@etfmanager.com
FROM_NAME="ETF Manager"

# =================
# üåê External APIs
# =================

# Financial Data APIs
YAHOO_FINANCE_API_KEY=your-yahoo-finance-api-key
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
FINNHUB_API_KEY=your-finnhub-api-key

# =================
# üöÄ Performance & Caching
# =================

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Cache TTL (Time To Live) in seconds
CACHE_TTL=300

# =================
# üìà Rate Limiting
# =================

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Authentication rate limiting
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_ATTEMPTS=5

# =================
# üìÅ File Upload Configuration
# =================

# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880

# Upload directory
UPLOAD_DIR=./uploads

# =================
# üîß Development & Debugging
# =================

# Logging configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Debug mode
DEBUG=etf-manager:*

# =================
# üåê CORS Configuration
# =================

# Allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =================
# üìä Analytics & Monitoring
# =================

# Google Analytics (Optional)
GA_TRACKING_ID=

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# =================
# üí∞ Subscription & Billing (Future)
# =================

# Stripe Configuration (for premium features)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# =================
# üîÑ Backup Configuration
# =================

# Automated backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =================
# üö® Alert Configuration
# =================

# WebSocket configuration for real-time alerts
WS_PORT=3001

# Notification settings
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_BROWSER_NOTIFICATIONS=true

# =================
# üåç Internationalization
# =================

# Default language and locale
DEFAULT_LANGUAGE=en
DEFAULT_LOCALE=en-US
SUPPORTED_LANGUAGES=en,it,fr,de,es
